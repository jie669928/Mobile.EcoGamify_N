<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".BookKidsCategory">

    <ImageButton
        android:id="@+id/kidbook6"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kid_book_six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kidbook4" />

    <ImageButton
        android:id="@+id/kidbook5"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kid_book_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kidbook3" />

    <ImageButton
        android:id="@+id/kidbook4"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kid_book_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kidbook2" />

    <ImageButton
        android:id="@+id/kidbook3"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kid_book_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kidbook1" />

    <ImageButton
        android:id="@+id/kidbook2"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kid_book_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="248dp"
        android:layout_height="42dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="66dp"
        android:background="#FFF8E1"
        android:gravity="center_vertical|center_horizontal"
        android:text="Kids"

        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/kidbook1"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kid_book_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <Button
        android:id="@+id/NextPageButton"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginBottom="55dp"
        android:text="Next page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="74dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="62dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationFragment">




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <Button
                    android:id="@+id/Categories"
                    android:layout_width="270dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="70dp"
                    android:text="Categories"
                    android:textColorLink="#673AB7"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/BooksImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/books_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Categories" />

                <Button
                    android:id="@+id/InformationButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:onClick="goToInformation"
                    android:text="Information"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/InformationImage" />

                <Button
                    android:id="@+id/BooksButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:text="Books"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/BooksImage" />

                <ImageView
                    android:id="@+id/VideoImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/video_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/InformationButton" />

                <ImageView
                    android:id="@+id/QuizImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/quiz_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/BooksButton" />

                <Button
                    android:id="@+id/VideoButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:text="Video"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/VideoImage" />

                <Button
                    android:id="@+id/QuizButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:text="Quiz"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/QuizImage" />

                <ImageView
                    android:id="@+id/InformationImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/information_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Categories" />

            </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>
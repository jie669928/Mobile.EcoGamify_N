<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5EFEF"
    tools:context=".HotCommunityActivity">

    <!-- App Title -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_name" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/myCommunityButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/myCommunityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="My"
        app:layout_constraintEnd_toStartOf="@+id/createCardButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/backButton0"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <Button
        android:id="@+id/createCardButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/cardScrollView"
        app:layout_constraintEnd_toStartOf="@+id/followingButton0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/myCommunityButton" />

    <!-- Following Button -->

    <Button
        android:id="@+id/followingButton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Following"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/createCardButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <!-- Scroll View for Cards -->
    <ScrollView
        android:id="@+id/cardScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1 -->

            <!-- Card 1 -->
            <LinearLayout
                android:id="@+id/card01Layout"
                android:layout_width="match_parent"
                android:layout_height="425dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_rectangle"
                android:orientation="vertical">

                <!-- Card 1 - Photo -->

                <!-- Card 1 - Title -->

                <!-- Card 1 - Text -->
                <ImageView
                    android:id="@+id/card01Image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/community_image1" />

                <TextView
                    android:id="@+id/card01Title"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_title"
                    android:gravity="center"
                    android:text="Power Cycling"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/card01Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_rectangle"
                    android:gravity="center"
                    android:text="Riding Green, Planting Roots – Ride sustainably, plant native species, and contribute to a healthier environment."
                    android:textSize="20sp" />

                <!-- Follow Button -->
                <Button
                    android:id="@+id/followButton01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_rectangle"
                    android:text="Follow" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/card02Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rectangle"
                android:orientation="vertical">

                <!-- Card 2 - Photo -->
                <ImageView
                    android:id="@+id/card02Image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/community_image2" />

                <!-- Card 2 - Title -->
                <TextView
                    android:id="@+id/card02Title"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_title"
                    android:gravity="center"
                    android:text="Beach Cleaning"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/card02Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_rectangle"
                    android:gravity="center"
                    android:text="Riding Green, Planting Roots – Ride sustainably, plant native species, and contribute to a healthier environment."
                    android:textSize="20sp" />

                <!-- Follow Button -->
                <Button
                    android:id="@+id/followButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/rounded_rectangle"
                    android:text="Follow" />
            </LinearLayout>

            <!-- Card 3 -->
            <LinearLayout
                android:id="@+id/card03Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rectangle"
                android:orientation="vertical">

                <!-- Card 3 - Photo -->
                <ImageView
                    android:id="@+id/card03Image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/beach_144x144" />

                <!-- Card 3 - Text -->
                <TextView
                    android:id="@+id/card03Title"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_title"
                    android:gravity="center"
                    android:text="Planting"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/card03Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_rectangle"
                    android:gravity="center"
                    android:text="Riding Green, Planting Roots – Ride sustainably, plant native species, and contribute to a healthier environment."
                    android:textSize="20sp" />

                <!-- Follow Button -->
                <Button
                    android:id="@+id/followButton03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/rounded_rectangle"
                    android:text="Follow" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- Space -->
    <Space
        android:id="@+id/space02"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cardScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:scrollIndicators="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#E5EFEF" />
</androidx.constraintlayout.widget.ConstraintLayout>

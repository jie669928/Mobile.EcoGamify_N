<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/Content1"
        android:layout_width="355dp"
        android:layout_height="502dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:background="#FFF8E1"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GGContent" />

    <TextView
        android:id="@+id/Content1Info"
        android:layout_width="322dp"
        android:layout_height="428dp"
        android:layout_marginTop="16dp"
        android:text=" Into the rainforest we hike, through slivers of sunlight and dripping-wet leaves.\n\n\n\n\n\n\n\n
 Up in the trees, thereâ€™s a symphony of sound! Chatters and chirps and a howling"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/Content1"
        app:layout_constraintStart_toStartOf="@+id/Content1"
        app:layout_constraintTop_toTopOf="@+id/Content1" />

    <TextView
        android:id="@+id/GGContent"
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="66dp"
        android:background="#FFF8E1"
        android:gravity="center_vertical|center_horizontal"
        android:text="Over and Under the Rainforest"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/BackButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BackHomeButton"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginBottom="84dp"
        android:text="Next page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/kidbookreading1"
        android:layout_width="260dp"
        android:layout_height="129dp"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kid_book_one_reading"
        app:layout_constraintEnd_toEndOf="@+id/Content1Info"
        app:layout_constraintStart_toStartOf="@+id/Content1Info"
        app:layout_constraintTop_toTopOf="@+id/Content1Info" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="65dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
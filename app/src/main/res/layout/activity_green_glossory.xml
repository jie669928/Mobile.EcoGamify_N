<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Content2"
        android:layout_width="356dp"
        android:layout_height="222dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="#FFF8E1"
        android:text="Deforestation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Content1" />

    <TextView
        android:id="@+id/Content2Info"
        android:layout_width="225dp"
        android:layout_height="169dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="The clearing of forests for purposes such as agriculture, logging,or urban development, leading to habitat loss and environmental degradation."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Content2"
        app:layout_constraintTop_toTopOf="@+id/Content2" />

    <TextView
        android:id="@+id/Content1"
        android:layout_width="355dp"
        android:layout_height="230dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="#FFF8E1"
        android:text="Carbon Footprint"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GGContent" />

    <TextView
        android:id="@+id/Content1Info"
        android:layout_width="225dp"
        android:layout_height="169dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="The total amount of greenhouse gas emissions, primarily carbon dioxide, produced directly or indirectly by human activities."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Content1"
        app:layout_constraintTop_toTopOf="@+id/Content1" />

    <TextView
        android:id="@+id/GGContent"
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:layout_marginTop="66dp"
        android:background="#FFF8E1"
        android:gravity="center_vertical|center_horizontal"
        android:text="Green Glossory"

        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Content1Photo"
        android:layout_width="100dp"
        android:layout_height="104dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/carbon_footprint"
        app:layout_constraintStart_toStartOf="@+id/Content1"
        app:layout_constraintTop_toTopOf="@+id/Content1" />

    <ImageView
        android:id="@+id/Content2Photo"
        android:layout_width="99dp"
        android:layout_height="103dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/deforestation"
        app:layout_constraintStart_toStartOf="@+id/Content2"
        app:layout_constraintTop_toTopOf="@+id/Content2" />

    <Button
        android:id="@+id/NextPageButton"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginBottom="55dp"
        android:text="Next page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="65dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
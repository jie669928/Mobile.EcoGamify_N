<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantNativeFragment">


    <!--    <androidx.constraintlayout.widget.ConstraintLayout-->
    <!--        android:id="@+id/constraintLayoutContainer"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        tools:context=".HomeCategoryActivity">-->


    <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <ImageView
                    android:id="@+id/QuizImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="34dp"
                    android:src="@drawable/quiz_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/BooksButton" />

                <ImageView
                    android:id="@+id/VideoImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/video_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/InformationButton" />

                <ImageView
                    android:id="@+id/BooksImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="34dp"
                    android:src="@drawable/books_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Categories" />

                <Button
                    android:id="@+id/QuizButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="34dp"
                    android:text="Quiz"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/QuizImage" />

                <Button
                    android:id="@+id/VideoButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="16dp"
                    android:text="Video"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/VideoImage" />

                <Button
                    android:id="@+id/BooksButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="34dp"
                    android:text="Books"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/BooksImage" />

                <Button
                    android:id="@+id/Categories"
                    android:layout_width="270dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="70dp"
                    android:text="Categories"
                    android:textColorLink="#673AB7"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/InformationButton"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="16dp"
                    android:onClick="goToInformation"
                    android:text="Information"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/InformationImage" />

                <ImageView
                    android:id="@+id/InformationImage"
                    android:layout_width="155dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/information_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Categories" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>